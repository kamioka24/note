<table width="500">
	<tr>
		<td colspan="3"><%= @post.created_at.strftime('%Y/%m/%d') %></td>
	</tr>
	<tr>
		<th colspan="3"><%= @post.title %></th>
	</tr>
	<tr>
		<td colspan="3"><%= safe_join(@post.body.split("\n"), tag(:br)) %></td>
	</tr>
	<tr>
		<td><%= link_to "Edit", edit_post_path(@post), class: "link" %></td>
		<td><%= link_to "Destroy", post_path(@post), method: :delete, "data-confirm" => "本当に削しますか？" %></td>
		<td><%= link_to "Back", posts_path %></td>
	</tr>
</table>